<UserControl x:Class="BeautyDesktopApp.Controls.DayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BeautyDesktopApp.Controls"
             mc:Ignorable="d"
             Name="Control">
    <Grid>
        <TextBlock Text="{Binding ElementName=Control, Path=Text}"
                   Background="{Binding ElementName=Control, Path=Background}" />
    </Grid>
</UserControl>
